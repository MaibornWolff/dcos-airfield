{
  "id": "airfield",
  "instances": 1,
  "cpus": 0.5,
  "mem": 512,
  "container": {
    "type": "MESOS",
    "portMappings": [
      {"containerPort": 5000}
    ],
    "docker": {
        "image": "maibornwolff/airfield:dev",
        "forcePullImage": true
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "healthChecks": [{
      "protocol": "MESOS_HTTP",
      "path": "/",
      "portIndex": 0,
      "timeoutSeconds": 10,
      "gracePeriodSeconds": 10,
      "intervalSeconds": 20,
      "maxConsecutiveFailures": 10
  }],
  "labels":{
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "TODO"
  },
  "env": {
      "AIRFIELD_BASE_HOST" : "TODO",
      "AIRFIELD_CONSUL_ENDPOINT": "TODO",
      "DCOS_SERVICE_ACCOUNT_CREDENTIAL": {
        "secret": "serviceCredential"
      }
  },
  "secrets": {
    "serviceCredential": {
      "source": "airfield/account-secret"
    }
  }
}
